{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "commonjs",
    "rootDir": "./",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}